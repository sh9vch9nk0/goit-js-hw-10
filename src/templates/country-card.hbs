<div class='country'>
  <h2 class="country-title"><img src='{{flags.svg}}' width='30' /> {{name.official}}</h2>
  <div class='info'>
    <p class="info-item"><strong>Capital: </strong>{{capital}}</p>
    <p class="info-item"><strong>Population: </strong> {{population}}</p>
    <p class="info-item"><strong>Languages: </strong>
      {{#each languages}} {{this}} {{/each}}</p>
  </div>

</div>